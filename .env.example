# =========================================
# Server Monitoring - Environment Variables
# Copy this file to .env and update values
# =========================================

# Database Configuration
DB_SA_PASSWORD=YourStrong@Passw0rd
SQL_SERVER_HOST=sqlserver
SQL_SERVER_PORT=1433
SQL_DATABASE_NAME=ServerMonitoringDb

# Redis Configuration
REDIS_PASSWORD=YourRedis@Password
REDIS_HOST=redis
REDIS_PORT=6379

# API Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080
API_PORT=5000

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=YourSuperSecretKeyForJWT_MustBeAtLeast32Characters_ChangeInProduction!
JWT_ISSUER=ServerMonitoringAPI
JWT_AUDIENCE=ServerMonitoringClient
JWT_EXPIRATION_MINUTES=60

# Frontend Configuration
WEB_PORT=3000
VITE_API_URL=http://localhost:5000

# CORS - Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000,http://localhost:5173

# Cache Settings
CACHE_USE_REDIS=true

# Logging
LOG_LEVEL=Information
