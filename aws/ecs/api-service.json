{
  "serviceName": "servermonitoring-api-service",
  "cluster": "${ECS_CLUSTER_NAME}",
  "taskDefinition": "${API_TASK_DEFINITION_ARN}",
  "launchType": "FARGATE",
  "desiredCount": 2,
  "platformVersion": "LATEST",
  "networkConfiguration": {
    "awsvpcConfiguration": {
      "subnets": [
        "${PRIVATE_SUBNET_1}",
        "${PRIVATE_SUBNET_2}"
      ],
      "securityGroups": [
        "${ECS_SECURITY_GROUP}"
      ],
      "assignPublicIp": "DISABLED"
    }
  },
  "loadBalancers": [
    {
      "targetGroupArn": "${API_TARGET_GROUP_ARN}",
      "containerName": "servermonitoring-api",
      "containerPort": 8080
    }
  ],
  "healthCheckGracePeriodSeconds": 60,
  "deploymentConfiguration": {
    "maximumPercent": 200,
    "minimumHealthyPercent": 100,
    "deploymentCircuitBreaker": {
      "enable": true,
      "rollback": true
    }
  },
  "enableECSManagedTags": true,
  "propagateTags": "SERVICE",
  "tags": [
    {
      "key": "Environment",
      "value": "${ENVIRONMENT}"
    },
    {
      "key": "Service",
      "value": "API"
    }
  ]
}
